# =============================================================================
# AIRFLOW CONFIGURATION
# =============================================================================

# Airflow Database Credentials
AIRFLOW_DB_USER=airflow
AIRFLOW_DB_PASSWORD=CHANGE_ME
AIRFLOW_DB_NAME=airflow

# Airflow Web UI Admin User
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=CHANGE_ME
_AIRFLOW_WWW_USER_FIRSTNAME=Admin
_AIRFLOW_WWW_USER_LASTNAME=User
_AIRFLOW_WWW_USER_EMAIL=admin@example.com

# Airflow Fernet Key (Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
AIRFLOW_FERNET_KEY=

# Airflow UID (Generate with: id -u)
AIRFLOW_UID=


# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Password (leave empty for no password, or set a strong password)
REDIS_PASSWORD=

# =============================================================================
# APPLICATION POSTGRESQL DATABASE
# =============================================================================

POSTGRES_APP_USER=article_user
POSTGRES_APP_PASSWORD=CHANGE_ME
POSTGRES_APP_DB=article_platform

# =============================================================================
# HIVE METASTORE DATABASE
# =============================================================================

HIVE_METASTORE_DB=metastore
HIVE_METASTORE_USER=hive
HIVE_METASTORE_PASSWORD=CHANGE_ME

# Hive User Credentials
